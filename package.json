{
	"name": "@tatamo/parsergenerator",
	"version": "0.1.1",
	"description": "simple lr(1) parser generator written in TypeScript",
	"keywords": [
		"parser",
		"generator",
		"lexer",
		"parsing",
		"compiler"
	],
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest",
		"test-w": "jest --watchAll",
		"build": "gulp",
		"watch": "gulp watch"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Tatamo/parsergenerator"
	},
	"author": "Tatamo",
	"license": "BSD-3-Clause",
	"devDependencies": {
		"@types/jest": "^21.1.2",
		"@types/node": "^8.0.34",
		"gulp": "^3.9.1",
		"gulp-sourcemaps": "^2.6.1",
		"gulp-tslint": "^8.1.2",
		"gulp-typescript": "^3.2.2",
		"jest": "^21.2.1",
		"merge2": "^1.2.0",
		"ts-jest": "^21.1.2",
		"tslint": "^5.7.0",
		"typescript": "^2.5.3"
	},
	"dependencies": {},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/(?!data/).*|\\.(test|spec))\\.(tsx?|jsx?)$",
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		],
		"watchPathIgnorePatterns": [
			"<rootDir>/__tests__/data/tmp/"
		],
		"coveragePathIgnorePatterns": [
			"<rootDir>/__tests__/data/",
			"<rootDir>/dist/"
		],
		"globals": {
			"ts-jest": {
				"tsConfigFile": "__tests__/tsconfig.json"
			}
		}
	}
}
