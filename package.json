{
	"name": "lavriapg",
	"version": "0.2.1",
	"description": "lalr(1) parser generator written in TypeScript",
	"keywords": [
		"parser",
		"generator",
		"lexer",
		"parsing",
		"compiler"
	],
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest",
		"test-w": "jest --watchAll",
		"build": "gulp",
		"watch": "gulp watch",
		"build-doc": "typedoc --mode file --out docs/ --tsconfig tsconfig.json ./src"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Tatamo/lavriapg"
	},
	"author": "Tatamo",
	"license": "BSD-3-Clause",
	"devDependencies": {
		"@types/jest": "^22.2.0",
		"@types/node": "^9.4.7",
		"gulp": "^3.9.1",
		"gulp-sourcemaps": "^2.6.4",
		"gulp-tslint": "^8.1.3",
		"gulp-typescript": "^4.0.1",
		"jest": "^22.4.2",
		"merge2": "^1.2.1",
		"ts-jest": "^22.4.1",
		"tslint": "^5.9.1",
		"typedoc": "^0.11.1",
		"typescript": "^2.7.2"
	},
	"dependencies": {},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/(?!data/).*|\\.(test|spec))\\.(tsx?|jsx?)$",
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		],
		"watchPathIgnorePatterns": [
			"<rootDir>/__tests__/data/tmp/"
		],
		"coveragePathIgnorePatterns": [
			"<rootDir>/__tests__/data/",
			"<rootDir>/dist/"
		],
		"globals": {
			"ts-jest": {
				"tsConfigFile": "__tests__/tsconfig.json"
			}
		}
	}
}
